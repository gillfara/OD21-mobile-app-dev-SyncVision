<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Input">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/round_grey</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- light theme -->
    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="bg_color" >#ffffff</item>
        <item name="text_color">#000000</item>
        <item name="meta_text_color">#606060</item>
    </style>

    <!-- Dark theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="meta_text_color">#000000</item>
        <item name="text_color">#aeaeae</item>
        <item name="bg_color">#000000</item>
    </style>
</resources>